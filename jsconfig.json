{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@libs/*": ["./src/libs/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@providers/*": ["./src/providers/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["./assets/*"],
      "@icons/*": ["./assets/icons/*"],
      "@images/*": ["./assets/images/*"],
      "@utils/*": ["./src/utils/*"],
    },
  },

  "typeAcquisition": {
    "include": ["./src/constants/globalDeclarations.d.ts"],
  },
  "exclude": ["node_modules", ".expo", ".vscode"],
}
